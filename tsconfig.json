{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "lib": [ "es6" ],
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "./dist", 
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "node_modules"
  ]
}
